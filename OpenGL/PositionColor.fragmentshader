#version 330

in vec3 retFragPos;
in vec2 retTexCoord;

out vec4 FragColor;

struct Material
{
	sampler2D diffuseTexture;
};

uniform Material material;

void main()
{
	vec4 diffColor = texture(material.diffuseTexture, retTexCoord);

	vec3 fusionColor = diffColor.rgb * abs(retFragPos);

	FragColor = vec4(fusionColor * 1.0f / length(fusionColor), 1.0f);
}
