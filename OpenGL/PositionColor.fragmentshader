#version 330

in vec3 retFragPos;
in vec2 retTexCoord;

out vec4 FragColor;

struct Material
{
	sampler2D diffuseTexture;
};

uniform Material material;

void main()
{
	vec4 diffColor = texture(material.diffuseTexture, retTexCoord);

	FragColor = vec4(diffColor.rgb * abs(retFragPos) * 2.0f, 1.0f);
}
